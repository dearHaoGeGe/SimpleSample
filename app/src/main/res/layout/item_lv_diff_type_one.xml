<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.my.simplesampletest.coupondisplayview.CouponDisplayView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB5C5"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_item_lv_diff_type_one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_item_lv_diff_type_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美食劵"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_num_item_lv_diff_type_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="编号:1122364985452"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_date_item_lv_diff_type_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="截止日期：2016-12-31"
                android:textSize="15sp" />

        </LinearLayout>

    </com.my.simplesampletest.coupondisplayview.CouponDisplayView>

</LinearLayout>