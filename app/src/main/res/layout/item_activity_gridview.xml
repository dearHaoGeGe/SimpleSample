<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_GVAct"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/vonvon" />

    <ImageView
        android:id="@+id/ivDel_item_GVAct"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/iv_item_GVAct"
        android:layout_alignRight="@+id/iv_item_GVAct"
        android:src="@mipmap/ic_error" />

    <TextView
        android:id="@+id/tvName_item_GVAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_GVAct"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="这是一个item"
        android:textSize="25sp" />

</RelativeLayout>