<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_PicassoAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv1_PicassoAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_PicassoAct"
        android:layout_toRightOf="@+id/iv_PicassoAct"
        android:text="subject" />

    <TextView
        android:id="@+id/tv2_PicassoAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1_PicassoAct"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/iv_PicassoAct"
        android:layout_toRightOf="@+id/iv_PicassoAct"
        android:text="summary" />

</RelativeLayout>